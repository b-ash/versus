#index-view
    width: 100%

#list
    width: 950px
    margin: 0 auto

.battle-description
    font-family: 'helvetica'
    margin: 20px 20px 0 20px

.battle-segway
    font-size: 20px
    font-weight: bold
    text-align: center
    margin: 20px

.battle-wrap
    width: 100%

    .battle-inner
        width: 700px
        margin: 0 auto

        table
            width: 100%

            tr
                height: 50px

            tr.break
                height: 30px

            .criteria 
                vertical-align: middle

                span
                    display: block
                    &.name
                        font-size: 18px
                        font-style: italic
                    &.desc 
                        color: #666
                        font-size: 12px

            th.contender
                width: 90px
                text-align: center

            tr.break td hr
                margin: 18px 0 0 0
                width: 676px
            
            .rank-wrap
                width: 26px
                height: 22px
                padding-left: 15px

            .rank
                border-radius 4px

                font-size: 20px
                line-height: 20px

                width: 26px
                height: 22px

                padding: 10px
                margin: 5px

                background-color: #DDD
                border: 1px solid #999
                text-align: center

                color: #666

.explanations
    margin-bottom: 30px

    .explanation:first-child
        float: left
        width: 470px

        > blockquote
            position: relative
            padding: 15px 30px
            color: #666
            background: #DDD
            border-radius 10px
            border: 0

            &::after
                content: ""
                position: absolute
                bottom: -50px
                left: 50px
                border-width: 0 20px 50px 0
                border-style: solid
                border-color: transparent #DDD
                display: block
                width: 0

        > p 
            margin: 15px 0 2em 85px
            font-style: italic
            font-size: 20px

    .explanation:nth-child(2)
        float: right
        width: 470px

        > blockquote
            position: relative
            padding: 15px 30px
            color: #666
            background: #DDD
            border-radius 10px
            border: 0

            &::before
                content: ""
                position: absolute
                bottom: -50px
                right: 50px
                border-width: 0 0 50px 20px
                border-style: solid
                border-color: transparent #DDD
                display: block
                width: 0

        > p 
            margin: 15px 85px 2em 0
            text-align: right
            font-style: italic
            font-size: 20px

